/* pages/user/index/index.wxss */
.my {
  width: 100%;
  text-align: center;
  border-bottom: 20rpx solid #f5f5f5;
  padding-bottom: 30rpx;
}

.my .avatar {
  width: 176rpx;
  height: 176rpx;
  border-radius: 50%;
}

.my .name {
  color: #293539;
  font-size: 76rrpx;
  margin-top: 10rpx;
  position: relative;
}

.my .name text {
  width: 10rpx;
  height: 10rpx;
  position: absolute;
  border: 4rpx solid #a78845;
  border-radius: 50%;
  margin-left: 10rpx;
}

.my-list {
  width: 95%;
  text-align: center;
  margin: 0 auto;
  margin-top: 60rpx;
}

.my-list .list {
  display: inline-block;
  width: 25%;
  position: relative;
}

.my-list .list text {
  display: block;
  font-size: 22rpx;
  color: #293539;
}

.my-list .list image {
  width: 56rpx;
  height: 56rpx;
}
