/* pages/user/address/address.wxss */
page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  width: 100%;
  height: 90%;
}
.address {
  width: 100%;
  height: 222rpx;
  background: rgb(250, 251, 252);
  margin-top: 5rpx;
  margin-bottom: 25rpx;
}
.header {
 width: 100%;
 height: 60rpx;
}
.header .name {
  float: left;
  font-size: 35rpx;
  margin-left: 30rpx;
  line-height: 60rpx;
}
.header .mobie {
  float: right;
  margin-right: 10rpx;
  line-height: 60rpx;
}
.content {
  width: 100%;
  height: 90rpx;
}
.content .detail {
  width: 100%;
  height: 45rpx;
  margin-left: 30rpx;
  font-weight:bold;
  margin-bottom: 5rpx;
  overflow: hidden;
  text-overflow: clip;
  display: -webkit-box;    
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.content .area{
  width: 100%;
  height: 40rpx;
  margin-left: 30rpx;
  color: #8a8686;
}
.foot {
  width: 100%;
  height: 70rpx;
}
label {
  float: left;
  width: 200rpx;
  margin-left: 5rpx;
  line-height: 60rpx;
}
.box{
  transform: scale(0.7,0.7);
}
.del {
  float: right;
  margin-right: 10rpx;
  line-height: 60rpx;
}
.line {
  height: 1px;
  border-top: solid #f4f4f4 1px;
}
.createAddress {
  width: 80%;
  margin-top: 20rpx;
  background-color: #503f10;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.createAddress::after {
  border-radius: 98rpx;
  border: 0; 
}